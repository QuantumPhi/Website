doctype html
html(lang='en')
    head
        link(rel='stylesheet', href='//fonts.googleapis.com/css?family=Questrial')
        link(rel='stylesheet', href='style.css')

        title='Tarik Onalan'

        script(src='js/jquery-2.1.1.min.js')
        script(src='js/smooth-scroll.min.js')
        script(src='js/dragon.min.js')
    body
        section#intro
            div
                svg(xmlns='http://www.w3.org/2000/svg', id='fractal')
            p#name='Tarik Onalan'
            a.icon-container.scroll(href='#about')
                img#icon(src='res/content/downarrow.svg')

        section#about
            p(style='position: absolute; font-size: 45; left: 50%;')='About Me:'
            p(style='position: relative; font-size: 37.5; left: 25%;')

        section#footer
            p(style='position: absolute; font-size: 30; left: 50%; top: 50%;')
                img#code(src='res/github/github-code.svg')
                &nbsp;with&nbsp;
                img#heart(src='res/github/github-heart.svg')
                &nbsp;by&nbsp;
                a(href='//github.com/QuantumPhi')='Tarik Onalan'
            mixin image(source)
                img(src=source, id=attributes.id)
            +image#license('res/cc/cc.svg')
            +image#license('res/cc/by.svg')
            a(href='//github.com/QuantumPhi/quantumphi.github.io')
                +image#github('res/github/github-icon.svg')
        script.
            var _window = $(window);

            var setDimensions = (function() {
                var obj = $('.icon-container');
                obj.height(_window.height() * 0.05);
                obj.width(obj.height());
                obj.css('border-width', _window.width() * 0.0037);
            });
            setDimensions();

            var fractal = (function() {
                $('svg#fractal').empty('path.dragon');
                DRAGON.fractal('fractal', [_window.width() * 0.22,_window.height() / 2 + 90], [_window.width() * 0.78,_window.height() / 2 + 90], 12, false, 100);
            });
            fractal();

            _window.resize(function() {
                setDimensions();
                fractal();
            });
